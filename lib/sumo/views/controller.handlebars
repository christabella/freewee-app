{{#section 'head'}}
    <style>* { padding: 0; margin: 0; }</style>
    <script src="/sumo/scripts/controller.js"></script>
{{/section}}

<div class="container">


    <section id="join">
      <input type="text" class="form-control" id="username" placeholder="Username">
      <br>
      <input type="tel" class="form-control" id="roomId" placeholder="Room Id">
      <br>
      <button class="btn btn-default btn-lg btn-primary" onclick="join()">JOIN</button>

    </section>

    <section id="controller" style="display:none">

      <div class="row">
          <div class="col-xs-6 center-block">
          <button class="synchronizer-button btn btn-default btn-xl btn-info center-block" id="&nbsp;UP&nbsp;">UP</button>
        </div>
        <div class="col-xs-6 center-block">
          <button class="synchronizer-button btn btn-default btn-xl btn-info center-block" id="DOWN">DOWN</button>
        </div>
      </div>
      
      <div class="row">
          <button class="leave btn btn-default btn-md btn-danger center-block" onclick="fadeOut('controller')">LEAVE</button>
      </div>
    </section>

  </div>
</div>